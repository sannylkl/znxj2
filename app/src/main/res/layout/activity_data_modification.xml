<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.jiarui.znxj.activity.DataModificationActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/white">

        <TextView
            android:id="@+id/data_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:clickable="true"
            android:drawableLeft="@mipmap/back_black"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/common_padding_medium"
            android:paddingRight="@dimen/common_padding_super_large"
            android:text="返回"
            android:textColor="#4D4D4D"
            android:textSize="@dimen/text_15sp" />

        <TextView
            android:id="@+id/common_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="资料修改"
            android:textColor="#515151"
            android:textSize="@dimen/common_font_title" />

        <TextView
            android:visibility="gone"
            android:id="@+id/data_bc"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/juli_15dp"
            android:gravity="center"
            android:text="保存"
            android:textColor="#515151"
            android:textSize="@dimen/common_font_large" />
    </RelativeLayout>

    <View style="@style/style_line_horizontal" />

    <RelativeLayout
        android:id="@+id/rela"
        android:layout_width="match_parent"
        android:layout_height="@dimen/min_height_small5"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/juli_15dp"
            android:text="头像"
            android:textSize="@dimen/text_15sp" />

        <com.jiarui.znxj.widget.CircleImageView
            android:id="@+id/data_ucon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/juli_15dp"
            android:src="@mipmap/logo" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rela2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/min_height_small5"
        android:layout_marginTop="@dimen/juli_15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/juli_15dp"
            android:text="姓名"
            android:textSize="@dimen/text_15sp" />

        <TextView
            android:id="@+id/data_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/juli_15dp"
            android:text="夏天"
            android:textSize="@dimen/text_15sp" />
    </RelativeLayout>
</LinearLayout>
