<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:id="@+id/prohect_line"
    android:orientation="vertical">

    <include layout="@layout/common_layout_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/personal_yhk"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/text_width2"
                    android:drawableLeft="@mipmap/library_name"
                    android:drawablePadding="8dp"
                    android:text="水库名称"
                    android:textSize="@dimen/text_15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/project_skmc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/text_width2"
                    android:text="湾里幸福水库"
                    android:textSize="@dimen/common_font_medium" />
            </LinearLayout>

            <View
                style="@style/style_line_horizontal"
                android:layout_marginLeft="45dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.jiarui.znxj.widget.MyExpandableListView
                    android:id="@+id/exlist_lol"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@color/white"
                    android:dividerHeight="0dp"
                    android:groupIndicator="@null" />
            </LinearLayout>

            <View
                style="@style/style_line_horizontal"
                android:layout_marginLeft="45dp" />

            <LinearLayout
                android:id="@+id/progress_lin_1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_group_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/text_width2"
                    android:drawableLeft="@mipmap/device_icon"
                    android:drawablePadding="8dp"
                    android:text="设备运转情况"
                    android:textSize="@dimen/text_15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_group_name_rigth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/text_width2"
                    android:drawablePadding="5dp"
                    android:drawableRight="@mipmap/less_icon"
                    android:text="未填写"
                    android:textSize="@dimen/common_font_medium" />
            </LinearLayout>

            <View style="@style/style_line_horizontal15" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/text_width2"
                    android:drawableLeft="@mipmap/witer_icon"
                    android:drawablePadding="8dp"
                    android:text="水位(m)"
                    android:textSize="@dimen/text_15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/project_sw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/text_width2"
                    android:text="22.9"
                    android:textSize="@dimen/common_font_medium" />
            </LinearLayout>

            <View
                style="@style/style_line_horizontal"
                android:layout_marginLeft="45dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/text_width2"
                    android:drawableLeft="@mipmap/cloud_icon"
                    android:drawablePadding="8dp"
                    android:text="天气"
                    android:textSize="@dimen/text_15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/project_tq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/text_width2"
                    android:text="未填写"
                    android:textSize="@dimen/common_font_medium" />
            </LinearLayout>

            <View
                style="@style/style_line_horizontal"
                android:layout_marginLeft="45dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/text_width2"
                    android:drawableLeft="@mipmap/period_icon"
                    android:drawablePadding="8dp"
                    android:text="下游水位(m)"
                    android:textSize="@dimen/text_15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/project_xysw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/text_width2"
                    android:text="22.9"
                    android:textSize="@dimen/common_font_medium" />
            </LinearLayout>

            <View style="@style/style_line_horizontal15" />

            <EditText
                android:id="@+id/leave_message"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_margin="15dp"
                android:background="@drawable/edit"
                android:gravity="top"
                android:hint="其他描述"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:singleLine="false"
                android:textColorHint="@color/color_gray"
                android:textCursorDrawable="@drawable/line"
                android:textSize="@dimen/common_font_medium" />

            <View style="@style/style_line_horizontal15" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:overScrollMode="never"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="0dp" />
            </LinearLayout>

            <View style="@style/style_line_horizontal15" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_width2"
                    android:text="录音"
                    android:textSize="@dimen/text_15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/project_ly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/text_width2"
                    android:drawableLeft="@mipmap/record"
                    android:drawablePadding="5dp"
                    android:text="开始录音"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/common_font_medium" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="50dp"
                android:paddingTop="30dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/text_blue"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:text="提交上报"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_15sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
