<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/common_padding_medium" >

        <ImageView
            android:id="@+id/common_task_item_head"
            android:layout_width="@dimen/common_head_icon_width"
            android:layout_height="@dimen/common_head_icon_height" />

        <LinearLayout
            android:id="@+id/act_shenhe_task_layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/common_task_item_head"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/common_padding_small" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/common_task_item_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="淹死的鱼"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/common_font_large" />

                <ImageView
                    android:id="@+id/common_task_item_icon1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/common_padding_small" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/common_task_item_icon2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="@dimen/common_padding_small" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="佣金："
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/common_font_large" />

                <TextView
                    android:id="@+id/common_task_item_commission"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/common_padding_small"
                    android:text="￥8.00"
                    android:textColor="@color/red" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/act_shenhe_task_layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/common_task_item_head"
            android:layout_toRightOf="@id/common_task_item_head"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/common_padding_small" >

            <TextView
                android:id="@+id/common_task_item_location1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawablePadding="@dimen/common_drawable_padding_large"
                android:padding="@dimen/common_padding_small"
                android:paddingLeft="@dimen/common_padding_large"
                android:text="南昌"
                android:textColor="@color/color_gray"
                android:textSize="@dimen/common_font_small"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/common_task_item_desc_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/common_margin_large"
                android:layout_toLeftOf="@id/common_task_item_location1"
                android:background="@drawable/common_border_them_bg"
                android:paddingBottom="@dimen/common_padding_mina"
                android:paddingLeft="@dimen/common_padding_minb"
                android:paddingRight="@dimen/common_padding_minb"
                android:paddingTop="@dimen/common_padding_mina"
                android:text="设计策划"
                android:textColor="@color/them_color"
                android:textSize="@dimen/common_font_small" />

            <TextView
                android:id="@+id/common_task_item_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/common_task_item_desc_title"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="急需设计策划"
                android:textColor="@color/gray"
                android:textSize="@dimen/common_font_medium" />
        </RelativeLayout>
    </RelativeLayout>

    <View style="@style/style_line_horizontal" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/common_padding_small" >

        <TextView
            android:id="@+id/common_task_item_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:ellipsize="end"
            android:paddingLeft="@dimen/common_padding_small"
            android:singleLine="true"
            android:text="南昌" />

        <TextView
            android:id="@+id/common_task_item_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/common_drawable_padding_large"
            android:text="2015-12-15" />

        <TextView
            android:id="@+id/task_item_task"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:drawablePadding="5dp"
            android:text="长期任务" />
    </LinearLayout>

    <View
        style="@style/style_line_horizontal_translate"
        android:layout_marginBottom="@dimen/common_margin_large" />

</LinearLayout>