<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_white"
    tools:context="com.jiarui.znxj.activity.TaskCenterActivity">

    <RelativeLayout
        android:id="@+id/rela"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@mipmap/mine_bg"
        android:minHeight="@dimen/title_height">

        <TextView
            android:id="@+id/common_title_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:clickable="true"
            android:drawableLeft="@mipmap/fanhui_bai"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/common_padding_medium"
            android:paddingRight="@dimen/common_padding_super_large"
            android:text="返回"
            android:textColor="@color/white"
            android:textSize="@dimen/text_15sp" />


        <ImageButton
            android:id="@+id/common_title_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@null"
            android:padding="@dimen/common_padding_medium"
            android:src="@mipmap/compile"
            android:visibility="visible" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rela">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@mipmap/element"
                android:orientation="vertical">


                <com.jiarui.znxj.widget.CircleImageView
                    android:id="@+id/centen_tx"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:src="@mipmap/defult_header" />

                <TextView
                    android:id="@+id/centen_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/common_padding_super_large"
                    android:text="姓名"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_15sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/juli_15dp"
                    android:layout_marginTop="@dimen/juli_15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="工作效率:"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_15sp" />

                    <TextView
                        android:id="@+id/centen_gzxl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/common_drawable_padding_super_large"
                        android:text="未知"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_15sp" />
                </LinearLayout>
            </LinearLayout>

            <GridView
                android:id="@+id/centen_grid"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:numColumns="3"></GridView>

            <RelativeLayout
                android:id="@+id/centen_txl"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/common_padding_super_large"
                    android:drawableLeft="@mipmap/address_book"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:text="通讯录"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/text_15sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@mipmap/less_icon" />
            </RelativeLayout>

            <View style="@style/style_line_horizontal" />

            <RelativeLayout
                android:id="@+id/centen_xgmm"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/common_padding_super_large"
                    android:drawableLeft="@mipmap/updata_password"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:text="修改密码"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/text_15sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@mipmap/less_icon" />
            </RelativeLayout>

            <View style="@style/style_line_horizontal" />

            <RelativeLayout
                android:id="@+id/my_jfsc"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/common_padding_super_large"
                    android:drawableLeft="@mipmap/version_updating"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:text="版本更新"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/text_15sp" />

                <TextView
                    android:id="@+id/centen_bbgx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:drawablePadding="10dp"
                    android:drawableRight="@mipmap/less_icon"
                    android:text="已是最新版本" />
            </RelativeLayout>

            <View style="@style/style_line_horizontal" />

            <RelativeLayout
                android:id="@+id/centen_gywm"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/common_padding_super_large"
                    android:drawableLeft="@mipmap/about_us"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:text="关于我们"
                    android:textColor="@color/color_black" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@mipmap/less_icon" />
            </RelativeLayout>

            <Button
                android:id="@+id/centen_tcdl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/min_height_small5"
                android:layout_marginBottom="@dimen/juli_15dp"
                android:layout_marginLeft="@dimen/min_height_small8"
                android:layout_marginRight="@dimen/min_height_small8"
                android:layout_marginTop="@dimen/min_height_small8"
                android:background="@drawable/common_border_them_bg"
                android:text="退出登录"
                android:textColor="@color/them_color" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
