<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/year"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="年"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/month"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="月"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/day"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="日"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/time"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="时"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/branch"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="分"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/min_height_min"
            android:layout_weight="1"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/dialog_qd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:text="确定"
            android:textSize="16sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            style="@style/style_line_horizontal"
            android:layout_marginTop="1dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/te1"
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:background="@color/them_color"
                android:gravity="center" />

            <TextView
                android:id="@+id/te2"
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:visibility="invisible"
                android:background="@color/them_color" />

            <TextView
                android:id="@+id/te3"
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:visibility="invisible"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@color/them_color" />

            <TextView
                android:id="@+id/te4"
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:visibility="invisible"
                android:background="@color/them_color"
                android:gravity="center" />

            <TextView
                android:id="@+id/te5"
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:visibility="invisible"
                android:background="@color/them_color"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_weight="3" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/dialog_list1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_padding_super_large"
            android:divider="#00000000"
            android:dividerHeight="0dip"
            android:listSelector="@android:color/transparent"></ListView>

    </LinearLayout>
</LinearLayout>
