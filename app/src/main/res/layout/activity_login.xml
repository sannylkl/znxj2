<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    android:orientation="vertical"
    tools:context="com.jiarui.znxj.activity.LoginActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:text="智能巡检系统"
        android:textColor="@color/them_color"
        android:textSize="@dimen/text_40sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_padding_super_large"
        android:layout_marginRight="@dimen/common_padding_super_large"
        android:layout_marginTop="@dimen/min_height_min"
        android:background="@drawable/common_dialog_border_bg"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="@dimen/common_margin_super_large"
            android:background="@color/white">

            <EditText
                android:id="@+id/login_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:background="@null"
                android:drawableLeft="@mipmap/user_name"
                android:drawablePadding="10dp"
                android:hint="用户名"
                android:textColorHint="#B8B8B9"
                android:textCursorDrawable="@drawable/line"
                android:textSize="@dimen/text_15sp" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white">

            <EditText
                android:id="@+id/login_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:background="@null"
                android:drawableLeft="@mipmap/password"
                android:drawablePadding="10dp"
                android:hint="密码"
                android:inputType="textPassword"
                android:textColorHint="#B8B8B9"

                android:textCursorDrawable="@drawable/line"
                android:textSize="@dimen/text_15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/login_line"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="@dimen/common_margin_super_large"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/login_sxk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:drawableLeft="@mipmap/location"
                android:drawablePadding="10dp"
                android:hint="地市"
                android:textColorHint="#B8B8B9" />

            <TextView
                android:id="@+id/login_xian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:hint="/县/"
                android:textColorHint="#B8B8B9" />

            <TextView
                android:id="@+id/login_sk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:hint="水库"
                android:textColorHint="#B8B8B9" />

            <LinearLayout
                android:id="@+id/login_xz"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/common_margin_super_large"
                    android:background="@mipmap/down" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_margin_super_large">

        <CheckBox
            android:id="@+id/login_jzmm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin_super_large"
            android:button="@null"
            android:drawableLeft="@drawable/jzmm_checkbox"
            android:drawablePadding="5dp"
            android:text="记住密码"
            android:textColor="@color/jzmm"
            android:textSize="@dimen/text_15sp" />

        <TextView
            android:id="@+id/login_szym"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/juli_15dp"
            android:text="网络设置"
            android:textSize="@dimen/text_15sp" />
    </RelativeLayout>

    <Button
        android:id="@+id/login_dl"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="@dimen/common_margin_super_large"
        android:layout_marginRight="@dimen/common_margin_super_large"
        android:layout_marginTop="35dp"
        android:background="@drawable/mine_blue_bg"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="16sp" />
</LinearLayout>
