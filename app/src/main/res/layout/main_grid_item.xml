<?xml version="1.0" encoding="utf-8"?>
<com.jiarui.znxj.widget.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_grid">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <ImageView
            android:id="@+id/main_grid_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/default_icon" />

        <TextView
            android:id="@+id/main_grid_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/main_grid_text1"
            android:textSize="16sp" />
    </LinearLayout>
</com.jiarui.znxj.widget.SquareRelativeLayout>
