<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/common_title_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/them_color"
    android:gravity="center_vertical"
    android:minHeight="@dimen/title_height"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/common_title_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@null"
        android:layout_marginLeft="5dp"
        android:clickable="true"
        android:paddingLeft="@dimen/common_padding_medium"
        android:paddingRight="@dimen/common_padding_super_large"
        android:src="@mipmap/fanhui_bai" />

    <TextView
        android:id="@+id/common_title_tv"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/color_white"
        android:textSize="@dimen/common_font_title" />

    <ImageButton
        android:id="@+id/common_title_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@null"
        android:padding="@dimen/common_padding_medium"
        android:layout_marginRight="5dp"
        android:src="@mipmap/left"
        android:visibility="invisible" />

</LinearLayout>